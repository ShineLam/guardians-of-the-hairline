
.kb {
  font-size: 32rpx;
  text-align: center;
  background: #F3F5F4;
  padding: 16rpx 14rpx 12rpx;
}

.kb .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 84rpx;
  line-height: 84rpx;
  font-weight: 500;
  color: #393b3f;
  background: #fff;
  box-shadow: 0 2rpx 4rpx 0 rgba(147, 153, 150, 1);
  border-radius: 8rpx;
  border: 0;
  margin: 0 .5% 10rpx;
  padding-left: 0;
  padding-right: 0;
}

.num {
  height: 400rpx;
}

.num .btn {
  width: 31%;
  margin-left: 1%;
  margin-right: 1%;
}

.hover-class {
  background: rgba(173, 180, 189, 0.5) !important;
}

.ico-del {
  width: 56rpx;
  height: 56rpx;
}
